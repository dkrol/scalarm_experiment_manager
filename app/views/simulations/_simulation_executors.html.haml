%section.panel.radius
  = content_tag :h3, t('registered_executors_list.label'), class: 'subheader'

  - if @executors.empty?
    .panel.callout.radius
      = content_tag :h4, t('registered_executors_list.empty_list'), class: 'subheader'

  - else
    %ul.no-bullet
      - @executors.each do |executor|
        %li
          = form_tag simulations_destroy_component_path do
            = hidden_field_tag 'component_type', 'executor'
            = hidden_field_tag 'component_id', executor._id
            = content_tag :strong, executor.name
            = submit_tag t('simulations.deregister_button'), class: 'button'
