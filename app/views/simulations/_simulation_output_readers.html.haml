%section.panel.radius
  = content_tag :h3, t('registered_output_readers_list.label'), class: 'subheader'

  - if @output_readers.empty?
    .panel.callout.radius
      = content_tag :h4, t('registered_output_readers_list.empty_list'), class: 'subheader'

  - else
    %ul.no-bullet
      - @output_readers.each do |output_reader|
        = content_tag :li do
          = form_tag simulations_destroy_component_path do
            = hidden_field_tag 'component_type', 'output_reader'
            = hidden_field_tag 'component_id', output_reader._id
            = content_tag :strong, output_reader.name
            = submit_tag t('simulations.deregister_button'), class: 'button'
